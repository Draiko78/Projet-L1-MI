# affichage_conditionnel.py
import pygame

def afficher_image_si_condition(condition, screen, position=(0, 0)):
    """
    Fonction simple qui affiche une image si la condition est vraie
    
    Args:
        condition: booléen - si True, l'image s'affiche
        screen: surface PyGame où afficher
        position: tuple (x, y) position de l'image
    """
    if condition:
        # Créer une image simple (rectangle coloré)
        image = pygame.Surface((200, 150))  # Taille fixe
        
        # Couleur bleue avec contour
        image.fill((100, 150, 255))
        pygame.draw.rect(image, (0, 0, 0), (0, 0, 200, 150), 3)
        
        # Texte simple
        font = pygame.font.Font(None, 36)
        texte = font.render("IMAGE", True, (255, 255, 255))
        texte_rect = texte.get_rect(center=(100, 75))
        image.blit(texte, texte_rect)
        
        # Afficher sur l'écran
        screen.blit(image, position)
        
        return True
    return False
